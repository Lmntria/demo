@model List<Category>
@{
    int counter = 0;
}
<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Category Table </h3>
            <a class="btn btn-primary" asp-action="create" asp-controller="category">Create</a>
        </div>
        <div class="row">   
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cat in Model)
                                {
                                    counter++;
                                    <tr>
                                        <td>@counter</td>
                                        <td>@cat.Name</td>
                                        <td>
                                            <a asp-action="edit" asp-route-id="@cat.Id" class="btn btn-success"><i class="las la-edit"></i></a>
                                            <a asp-action="delete" asp-route-id="@cat.Id" class="btn btn-danger delete-btn"><i class="las la-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- main-panel ends -->